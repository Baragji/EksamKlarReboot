  /* ===== SHADOWS ===== */
  
  --shadow-kahoot-sm: 0 2px 4px 0 rgba(0, 0, 0, 0.1);
  --shadow-kahoot-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  --shadow-kahoot-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
