describe('DeckManager Component - TDD', () => {
  beforeEach(() => {
    // Mock localStorage for Zustand persist
    Object.defineProperty(window, 'localStorage', {
      value: {
        getItem: vi.fn(() => null),
        setItem: vi.fn(),
        removeItem: vi.fn(),
        clear: vi.fn(),
      },
