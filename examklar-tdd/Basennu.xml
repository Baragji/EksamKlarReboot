        tags: ['math'],
        lastReviewed: new Date(),
        nextReview: new Date(),
        correctStreak: 0,
        totalReviews: 0
      })

      store.addCardToDeck(deck.id, {
        front: 'Question 2',
        back: 'Answer 2',
        difficulty: 'medium',
        tags: ['math'],
        lastReviewed: new Date(),
        nextReview: new Date(),
        correctStreak: 0,
        totalReviews: 0
